<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView android:id="@+id/MathInfo"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_margin="10dp"
    android:backgroundTint="@color/overlay_dark_80"
    android:clickable="true"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp"
    android:foreground="?android:selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryLight"
            android:gravity="center_vertical"
            android:minHeight="?attr/actionBarSize"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/spacing_large"
                android:layout_height="wrap_content" />

            <androidx.cardview.widget.CardView
                android:layout_width="25dp"
                app:cardCornerRadius="5dp"
                android:layout_gravity="center"
                android:layout_height="25dp">
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="1dp"
                    android:src="@drawable/logo2" />
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_weight="1"
                android:text="Maths et Informatique"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/light_blue_50"
                android:textSize="15sp"
                android:textStyle="bold" />


        </LinearLayout>

    <Button
        android:id="@+id/icon"
        android:layout_gravity="end|center"
        android:layout_marginEnd="15dp"
        android:background="@drawable/ic_settings_"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:padding="0dp"
        />
    </androidx.cardview.widget.CardView>


